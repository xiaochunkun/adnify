{
  "name": "adnify",
  "version": "1.5.15",
  "description": "Adnify - A lightweight yet powerful AI-powered code editor",
  "productName": "Adnify",
  "author": "adnaan <adnaan.worker@gmail.com>",
  "license": "SEE LICENSE IN LICENSE",
  "homepage": "https://github.com/adnaan-worker/adnify",
  "repository": {
    "type": "git",
    "url": "https://github.com/adnaan-worker/adnify.git"
  },
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "pack": "npm run build && electron-builder --dir",
    "preview": "npm run build && electron .",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "postinstall": "node scripts/download-wasm.js"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@google/genai": "^1.35.0",
    "@lancedb/lancedb": "^0.23.0",
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@monaco-editor/react": "^4.6.0",
    "@parcel/watcher": "^2.4.1",
    "@vscode/ripgrep": "^1.15.9",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "adm-zip": "^0.5.16",
    "diff": "^8.0.2",
    "dugite": "^2.7.1",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "file-icons-js": "^1.1.0",
    "framer-motion": "^12.25.0",
    "iconv-lite": "^0.6.3",
    "jschardet": "^3.1.3",
    "lucide-react": "^0.562.0",
    "monaco-editor": "^0.55.1",
    "node-pty": "^1.1.0",
    "openai": "^6.16.0",
    "p-limit": "^3.1.0",
    "picomatch": "^4.0.3",
    "png2icons": "^2.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^16.1.0",
    "react-virtuoso": "^4.18.1",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.5",
    "tree-sitter-wasms": "^0.1.13",
    "typescript-language-server": "^5.1.3",
    "vscode-langservers-extracted": "^4.10.0",
    "web-tree-sitter": "^0.20.8",
    "zod": "^3.25.76",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@electron/rebuild": "^3.6.0",
    "@types/adm-zip": "^0.5.7",
    "@types/diff": "^7.0.2",
    "@types/node": "^22.10.2",
    "@types/picomatch": "^4.0.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^4.0.15",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "electron": "^39.2.7",
    "electron-builder": "^24.13.3",
    "fast-check": "^4.4.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "vite": "^6.0.3",
    "vite-plugin-electron": "^0.28.8",
    "vitest": "^4.0.15"
  },
  "build": {
    "appId": "com.adnify.app",
    "productName": "Adnify",
    "publish": {
      "provider": "github",
      "owner": "adnaan-worker",
      "repo": "adnify",
      "releaseType": "release"
    },
    "directories": {
      "output": "release"
    },
    "asar": true,
    "asarUnpack": [
      "node_modules/node-pty/**",
      "node_modules/@vscode/ripgrep/**",
      "node_modules/dugite/**",
      "node_modules/@lancedb/**",
      "node_modules/@parcel/watcher/**",
      "node_modules/sharp/**"
    ],
    "files": [
      "dist/**/*",
      "public/**/*",
      "!**/*.map",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!config.json",
      "!bootstrap.json",
      "!.adnify/**"
    ],
    "win": {
      "icon": "resources/icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Adnify",
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico",
      "installerHeaderIcon": "resources/icon.ico",
      "artifactName": "${productName}-Setup-${version}-${arch}.${ext}"
    },
    "portable": {
      "artifactName": "${productName}-${version}-${arch}-Portable.${ext}"
    },
    "mac": {
      "icon": "resources/icon.icns",
      "artifactName": "${productName}-${version}-${arch}-mac.${ext}",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "identity": null
    },
    "linux": {
      "icon": "resources/icon.png",
      "artifactName": "${productName}-${version}-${arch}-linux.${ext}",
      "target": [
        "AppImage",
        "tar.gz"
      ],
      "category": "Development"
    },
    "extraResources": [
      {
        "from": "resources/tree-sitter",
        "to": "tree-sitter"
      },
      {
        "from": "resources/uiux",
        "to": "uiux"
      }
    ]
  }
}
